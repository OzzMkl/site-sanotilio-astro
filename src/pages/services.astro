---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import ServiceCard from "../components/ServiceCard.astro";
import SectionProducts from "../components/ProductCard.astro";

const services = [
  {
    icon: "category",
    title: "Venta de Block y Anillos a la Medida",
    text: "Fabricamos y vendemos block y anillos personalizados, adaptados al tamaño exacto que tu proyecto requiere.",
  },
  {
    icon: "build",
    title: "Renta de Maquinaria",
    text: "Contamos con equipo especializado para facilitar tus trabajos de obra, excavación y demolición.",
  },
  {
    icon: "delete",
    title: "Sacar Escombro",
    text: "Ofrecemos el servicio de recolección y retiro de escombro de forma rápida y segura, ideal para mantener tus espacios limpios y en orden.",
  },
  {
    icon: "calculate",
    title: "Cotización de Losa",
    text: "Te ayudamos a calcular y cotizar tu losa con materiales y medidas precisas para optimizar tu presupuesto.",
  },
  {
    icon: "vertical_split",
    title: "Postes de Concreto",
    text: "Disponibles en diferentes medidas y resistentes para cualquier tipo de instalación eléctrica o estructural.",
  },
];

const products = [
  {
    image: "/images/products/block.webp",
    title: "Block, tabicón y Anillos a la Medida",
    text: "Fabricamos y vendemos block tabicón, vigueta, postes de concreto y anillos personalizados, adaptados al tamaño exacto que tu proyecto requiere.",
  },
  {
    image: "/images/products/cementos_cemex.webp",
    title: "Cemento",
    text: "Variedad de cementos de alta calidad para todo tipo de construcciones.",
  },
  {
    image: "/images/products/tools_trupper.webp",
    title: "Herramientas",
    text: "Desde herramientas manuales hasta eléctricas, ideales para todo tipo de trabajo.",
  },

  {
    image: "/images/products/mezcladora.webp",
    title: "Tuberías y Accesorios",
    text: "Sistemas de plomería, drenaje y conducción de agua.",
  },
  {
    image: "/images/products/paints.webp",
    title: "Pinturas",
    text: "Pinturas vinílicas, esmaltes y recubrimientos para interiores y exteriores.",
  },
  {
    image: "/images/products/paint_accessories.webp",
    title: "Accesorios de Pintura",
    text: "Brochas, rodillos y cintas para acabados profesionales.",
  },
];
---

<Layout title="Servicios - San Otilio">
  <section
    class="text-center py-8 bg-[url(/images/bg_alambre.webp)] bg-position-[center_bottom_-6rem] bg-size-[auto_1920px]"
  >
    <h2 class="text-white text-4xl md:text-5xl font-semibold py-8 mb-6">
      Nuestros servicios
    </h2>
  </section>
  <main class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <h2
        class="text-2xl md:text-4xl font-semibold py-8 mb-6 text-center border-b-4 border-amber-400 inline-block"
      >
        Disfruta de la experiencia San Otilio
      </h2>
      <p class="text-xl text-gray-700 mb-6">
        En Materiales San Otilio te ofrecemos soluciones completas para tus
        proyectos de construcción. Nuestro compromiso es brindarte atención
        personalizada, productos de calidad y servicios eficientes que se
        adaptan a tus necesidades.
      </p>

      <div
        class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 items-center"
      >
        <!-- Tarjetas -->
        <div class="order-1 md:order-2 space-y-6">
          {services.map((service) => <ServiceCard {...service} />)}
        </div>

        <!-- Imagen -->
        <div class="order-2 md:order-1">
          <Image
            src="/images/bloquera_yard.webp"
            alt="Patio sucursal bloquera San Otilio"
            loading="lazy"
            width="1920"
            height="1080"
            class="rounded-lg shadow-md hover:scale-105 transition-transform duration-300"
          />
        </div>
      </div>
    </div>
    <section class="py-8 js-scroll fade-in-left">
      <div class="max-w-7xl mx-auto">
        <h2
          class="text-2xl md:text-4xl font-semibold py-8 mb-6 text-center border-b-4 border-amber-400 inline-block"
        >
          Servicio de transporte publico federal
        </h2>
        <div
          class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 items-center"
        >
          <div class="order-2 md:order-1">
            <p class="text-xl text-gray-700 mb-6">
              Contamos con unidades autorizadas para el transporte público
              federal, ideales para el traslado seguro y eficiente de materiales
              de construcción a cualquier parte del país.
            </p>
          </div>
          <div class="order-1 md:order-2">
            <Image
              src="/images/transport_trucks.webp"
              loading="lazy"
              alt="Camiones de transporte San Otilio"
              loading="lazy"
              width="900"
              height="400"
              class="rounded-lg shadow-md hover:scale-105 transition-transform duration-300"
            />
          </div>
        </div>
      </div>
    </section>
    <section class="py-8 js-scroll fade-in-right">
      <div class="max-w-7xl mx-auto">
        <h2
          class="text-2xl md:text-4xl font-semibold py-8 mb-6 text-center border-b-4 border-amber-400 inline-block"
        >
          Productos
        </h2>
        <p class="text-xl text-gray-700 mb-6">
          Trabajando solo con las mejores marcas y productos del mercado, para
          garantizar la calidad y durabilidad de tus proyectos.
        </p>
        <SectionProducts products={products} />
      </div>
    </section>
  </main>
</Layout>
