---
import { Image } from "astro:assets";

interface Product {
  image: string;
  title: string;
  text: string;
}

interface Props {
  products: Product[];
}

const { products } = Astro.props;
---

{
  products.map((product, index) => (
    <div
      class={`flex flex-col md:flex-row ${
        index % 2 !== 0 ? "md:flex-row-reverse" : ""
      } items-center gap-6 my-10 js-scroll fade-in-bottom`}
    >
      <div class="w-full md:w-1/2">
        <Image
          src={`${product.image}`}
          alt={product.title}
          loading="lazy"
          width="1920"
          height="1080"
          class="rounded-lg shadow-md hover:scale-105 transition-transform duration-300"
        />
      </div>
      <div class="w-full md:w-1/2">
        <h3 class="text-2xl font-bold mb-2">{product.title}</h3>
        <p class="text-gray-700 text-lg">{product.text}</p>
      </div>
    </div>
  ))
}
